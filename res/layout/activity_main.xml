<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_container"
        tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:fitsSystemWindows="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:textColor="?android:attr/textColorPrimary"
                app:layout_collapseMode="pin"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
            android:id="@+id/main_logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_logo_l"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/main_title"
            android:scaleType="centerInside"
            android:layout_margin="32dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/exthmui_logo"/>


    <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.35"
            tools:text="exTHmUI 10.0"/>

    <TextView
            android:id="@+id/main_android_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/main_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Android 10.0"/>

    <TextView
            android:text="@string/main_last_updates_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_last_check"
            app:layout_constraintTop_toBottomOf="@id/main_android_version"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
            android:id="@+id/main_refreshing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/main_last_check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            style="?android:attr/progressBarStyle"/>

    <TextView
            android:id="@+id/main_build_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:maxLines="1"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/main_last_check"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="exTHmUI 10.0 tester"
            android:alpha="0.87"
            android:paddingBottom="8sp"
            android:fontFamily="sans-serif-medium"/>

    <TextView
            android:id="@+id/main_build_date"
            android:layout_width="115dp"
            android:layout_height="24dp"
            android:maxLines="1"
            android:textSize="14sp"
            tools:text="01 January 2020"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_build_version"/>

    <TextView
            android:id="@+id/main_no_new_updates_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_logo"
            android:layout_margin="16dp"
            android:gravity="center_horizontal"
            android:text="@string/main_no_updates"
            android:textColor="?android:textColorSecondary"/>

    <Button
            android:id="@+id/main_check_for_updates"
            android:text="@string/check_for_updates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/main_no_new_updates_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="?android:attr/buttonBarButtonStyle"
            />

    <TextView
            android:id="@+id/main_changelog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="54dp"
            app:layout_constraintTop_toBottomOf="@id/main_build_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Update info"/>

    <Button
            android:id="@+id/main_show_changelog"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_changelog"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/more_information"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_file_download"/>

    <ProgressBar
            android:id="@+id/main_progress_bar"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@id/main_notice_card"
            style="@style/ProgressBar_Scale"
            tools:progress="16"
            tools:visibility="visible"/>

    <TextView
            android:id="@+id/main_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/main_progress_bar"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="46.8 of 300 PB (3 years left) â€¢ 15.6%"
            tools:visibility="visible"/>

    <TextView
            android:id="@+id/main_build_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round"
            android:gravity="center_vertical"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/main_notice_card"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            tools:text="300 PB"
            tools:visibility="invisible"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/main_notice_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/notice_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="4dp"
                    android:text="@string/title_notices"
                    android:clickable="true"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/main_notice_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="5dp"
                    android:scrollbars="none"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

